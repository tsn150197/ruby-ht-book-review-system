<div class="site-blocks-cover overlay" id="bg-site-blocks" data-aos="fade"
  data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row align-items-center justify-content-center text-center">
      <div class="col-md-12">
        <div class="row justify-content-center mb-4">
          <div class="col-md-8 text-center">
            <h1 class="" data-aos="fade-up">
              <%= t ".title" %>
            </h1>
            <p data-aos="fade-up" data-aos-delay="100">
              <%= t ".maxim" %>
            </p>
            <%= render "shared/flash" %>
          </div>
        </div>

        <div class="form-search-wrap mb-3" data-aos="fade-up"
          data-aos-delay="200">
          <%= form_with url: search_books_path, method: :get,
            local: true do |f| %>
            <div class="row align-items-center">
              <div class="col-lg-12 mb-4 mb-xl-0 col-xl-9">
                <%= f.autocomplete_field :title,
                  autocomplete_book_title_books_path,
                    class: "form-control rounded",
                      placeholder: t(".search_book") %>
              </div>
              <div class="col-lg-12 col-xl-3 ml-auto text-right">
                <%= f.submit t(".btn_search_book"),
                  class: "btn btn-primary btn-block rounded"%>
              </div>
            </div>
          <% end %>
        </div>

        <div class="form-search-wrap" data-aos="fade-up" data-aos-delay="200">
          <%= form_with url: search_users_path, method: :get,
            local: true do |f| %>
            <div class="row align-items-center">
              <div class="col-lg-12 mb-4 mb-xl-0 col-xl-9">
                <%= f.autocomplete_field :name,
                  autocomplete_user_profile_name_users_path,
                    class: "form-control rounded",
                      placeholder: t(".search_user") %>
              </div>
              <div class="col-lg-12 col-xl-3 ml-auto text-right">
                <%= f.submit t(".btn_search_user"),
                  class: "btn btn-primary btn-block rounded"%>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
